<% if super?(current_user[:id]) || super?(current_user[:id]) %>
  <div class="container-super " >
        <div class="wrap-super ">
          <h2 style="text-align:center;"> Lista de usuarios </h2>
            <div class="barra2 container">
              <table id="usuarios" class="display">
                  <thead>
                    <tr>
                      <th>Nombre</th>
                      <th>Correo</th>
                      <th>Telefono</th>
                      <th>Rol(es)</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                <% @user.each do |u| %>
                  <tr>
                    <td><%=u.name %> <%= u.last_name %> </td>
                    <td><%=u.email %> </td>
                    <td><%=u.phone %> </td>
                    <td>
                      <%if cliente?(u.id)%>
                        Cliente
                      <%end%>
                      <%if supervisor?(u.id)%>
                        Supervisor
                      <%end%>
                      <%if admin?(u.id)%>
                        Administrador
                      <%end%>
                      <%if gestor?(u.id)%>
                        Gestor 
                      <%end%>
                      <%if super?(u.id)%>
                        Super Usuario
                      <%end%>
                    </td>
                    <td><%= link_to "<i class='fas fa-users-cog'></i>".html_safe, administrador_edit_path(id: u.id)%>
                     <%# link_to 'Eliminar', administrador_eliminar_path(id: u.id) %> </td>
                  </tr>
                <% end %>
              </table>
            </div>
        </div>
  </div>
<% else %>
	<h1>Usted no deberia estar en esta pagina</h1>
<% end %>

<script>
    $(document).ready( function () {
        $('#usuarios').DataTable();
    } );
</script>