

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

 <div class="container ">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">

                    <form  class="form-inline"> 

                            <div class="container" style="text-align:center;">
                                
                                <img class="imgLogo" alt="logo" src="<%= asset_path 'Fantasirow.PNG' %>"> 
                                
                            </div>
                              <h2 style="text-align:center;">Editar Cuenta</h2>
                             <%= render "devise/shared/error_messages", resource: resource %>

                            <div class="field form-group">
                              <%= f.label "Nombre",class:"col-form-label" %>
                              <%= f.text_field :name, autofocus: true , class:"form-control" %>
                            </div>

                            <div class="field form-group">
                              <%= f.label "Apellido" ,class:"col-form-label"%>
                              <%= f.text_field :last_name, autofocus: true , class:"form-control"%>
                            </div>

                            <div class="field form-group">
                              <%= f.label "Telefono Celular",class:"col-form-label" %>
                              <%= f.text_field :phone, autofocus: true , class:"form-control" %>
                            </div>

                            <div class="field form-group">
                              <%= f.label "Correo" ,class:"col-form-label"%>
                              <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" %>
                            </div>

                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>

                            <div class="field form-group">
                              <%= f.label "Nueva Contraseña",class:"col-form-label" %> <i>(Dejar en blanco si no deseas cambiarla)</i><br />
                              <%= f.password_field :password, autocomplete: "new-password" , class:"form-control"%>
                              <% if @minimum_password_length %>
                                
                                <em><%= @minimum_password_length %> Caracteres minimo</em>
                              <% end %>
                            </div>

                            <div class="field form-group">
                              <%= f.label "Confirmar nueva contraseña" ,class:"col-form-label"%>
                              <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
                            </div>

                            <div class="field form-group">
                              <%= f.label "Contraseña Actual",class:"col-form-label" %> <i>(Necesitamos tu contraseña actual para poder efectuar el cambio de contraseña)</i>
                              <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
                            </div>

                            <div class="actions form-group">
                              <%= f.submit "Actualizar" ,class: 'btn btn-primary btn-block' %>
                            </div>




                      </form>
                   </div>
              </div>
          </div>
      </div>
  </div>
<% end %>
