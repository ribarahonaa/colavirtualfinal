

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
<div class="container ">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-3">

                      <img src="<%= asset_path 'Fantasirow.PNG' %>" class="card-img" alt="...">
                    <div class="card-body">
                          <h2 style="text-align:center;">Registro</h2>
                    <form  class="form-signin  "> 

                      <div class="field form-group " >
                        <%= f.label "Nombre",class:"col-form-label" %>
                        <%= f.text_field :name, autofocus: true , class:"form-control" %>
                      </div>

                      <div class="field form-group " >
                        <%= f.label "Apellido" ,class:"col-form-label"%>
                        <%= f.text_field :last_name, autofocus: true , class:"form-control"%>
                      </div>

                      <div class="field form-group ">
                        <%= f.label "Telefono Celular" ,class:"col-form-label"%>
                        <%= f.text_field :phone, autofocus: true, placeholder:'+569 9876 5432', class:"form-control" %>
                      </div>

                      <div class="field form-group " >
                        <%= f.label "Correo",class:"col-form-label" %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
                      </div>

                      <div class="field form-group " >
                        <%= f.label "ContraseÃ±a",class:"col-form-label" %>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> Caracteres minimo)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
                      </div>

                      <div class="field form-group " >
                        <%= f.text_field :groups_id, class:"form-control", value: 1, type: 'hidden' %>
                      </div>

                      <div class="field form-group " >
                        <%= f.label "Confirmar ContraseÃ±a" ,class:"col-form-label" %>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
                      </div>
                        <%= render "devise/shared/error_messages", resource: resource %>
                      <div class="actions form-group " >
                        <%= f.submit "Registrarse", class: 'btn btn-primary btn-block' %>
                      </div>

                            </form>                
                    </div>
                </div>
            </div>
        </div>
    </div> 
<% end %>
