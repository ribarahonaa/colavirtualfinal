<% provide :head_tags do %>
  <meta name='turbolinks-visit-control' content='reload'>
  <script>
      document.addEventListener("DOMContentLoaded", initMap2);
  </script>
<% end %>
<%= form_with(model: atraccion, local: true, :html => { :multipart => true }) do |form| %>
  <% if atraccion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(atraccion.errors.count, "error") %> prohibited this atraccion from being saved:</h2>

      <ul>
      <% atraccion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div  class="login100-form" > 
    <div class="field form-group">
      <%= form.label :nombre_atc,"Nombre" ,class:"input"%>
      <%= form.text_field :nombre_atc , class:"form-control", placeholder: "Kamikaze"%>
    </div>

    <div class="field form-group">
      <%= form.label :descripcion_atc,"Descripcion",class:"input" %>
      <%= form.text_area :descripcion_atc , class:"form-control" %>
    </div>

    <div class="field form-group">
      <%# form.label :subir_imagen_de_la_atraccion_por_url_o_adjuntando_archivo, class:"input" %>
      <%= form.label :imagen_atc,"Url Imagen", class:"input" %>
      <%= form.text_field :imagen_atc , class:"form-control" %><br>
      <%# form.file_field :imagen_atc , class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label  :capacidad_atc,"Capacidad",class:"input" %>
      <%= form.number_field :capacidad_atc , class:"form-control", placeholder: "100"%>
    </div>
    
    <div class="field form-group">
      <%= form.label :latitude,class:"input" %>
      <%= form.text_field :latitude, readonly: true, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :longitude ,class:"input" %>
      <%= form.text_field :longitude, readonly: true, class:"form-control " %>
    </div>
    
    <div class="map_wrapper2" id="map_wrapper">
      <div id="map2"></div>
    </div>

    <div class="container-login100-form-btn" >
        <div class="wrap-login100-form-btn">
          <%= form.submit 'Guardar', class: 'btn btn-primary btn-block login100-form-btn'  %>
        </div>
    </div>

  </div> 
<% end %>
 